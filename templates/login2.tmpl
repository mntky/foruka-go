<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="css/login.css">
<link 
	rel="stylesheet" 
	href="https://fonts.googleapis.com/css?family=Orbitron"	
>
<title>foruka-go</title>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>

<script type="text/javascript">
    $(function(){
        $("#response").html("Response Values");
        $("#button").click( function(){
            var url = "http://192.168.11.100:8081/signin"
                var JSONdata = {
                    username: $("#name").val(),
                    password: $("#pass").val()      
                };
            alert(JSON.stringify(JSONdata));
            $.ajax({
                type : 'post',
                url : url,
                data : JSON.stringify(JSONdata),
                contentType: 'application/JSON',
                dataType : 'JSON',
                scriptCharset: 'utf-8',
                success : function(data) {
                    // Success
                    alert("success");
                    alert(JSON.stringify(data));
                    $("#response").html(JSON.stringify(data));
                },
                error : function(data) {
                    // Error
                    alert("error");
                    alert(JSON.stringify(data));
                    $("#response").html(JSON.stringify(data));
                }
            });
        })
    })
</script>
</head>
<body>

<div id="wrapper">
	<div id="header">
		<div class="top_banner">
			<h1>
				<a id="rinku" href="http://192.168.11.100:8080">foruka-go</a>
			</h1>
			<hr>
		</div>
	</div>
</div>

<p>
       
<p><input name="username" type="text" id="name"class="form-control" placeholder="mail address" required> <br> </p>
        
<p><input name="password" type="password" id="pass" class="form-control" placeholder="password" required></p>

        <br>
        <button id="button" class="btn btn-lg btn-warning btn-block" type="submit">login</button>
    </form>
</div>
<textarea id="response" cols=120 rows=10 disabled></textarea>
	

</body>
</html>
